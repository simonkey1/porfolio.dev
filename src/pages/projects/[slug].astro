---
import MarkdownPostLayout from "../../layouts/MarkdownPostLayout.astro";

// Obtener el parÃ¡metro de la URL
const { slug } = Astro.params;

// Importar todos los archivos Markdown
const allProjects = import.meta.glob("./*.md", { eager: true });

// Buscar el archivo Markdown que coincide con el `slug`
const project = allProjects[`./${slug}.md`] as any; // ðŸ‘ˆ Se fuerza el tipo any para evitar errores

if (!project) {
  throw new Error(`Proyecto "${slug}" no encontrado`);
}
---

<MarkdownPostLayout {...project.frontmatter}>
  {project.default()}
</MarkdownPostLayout>
